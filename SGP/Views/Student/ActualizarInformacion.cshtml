@{
    ViewData["Title"] = "ActualizarInformacion";
}

<h1 class="title">Actualizar informacion</h1>

<div class="bltbl2"><table>
  <tr>
    <th>No. documento</th>
    <th>Nombre completo</th>
    <th>Correo</th>
    <th>Direccion</th>
    <th>Telefono</th>
  </tr>
  <tr>
    <td><input type="text" placeholder="No. documento..."></td>
    <td><input type="text" placeholder="Nombre completo..."></td>
    <td><input type="text" placeholder="Correo..."></td>
    <td><input type="text" placeholder="Direccion..."></td>
    <td><input type="text" placeholder="Telefono..."></td> 
  </tr>
</table>
</div>

<div class="bl2">
<div><form> 
<label> Tipo de documento:</label><br>
<select name=”documento”>
<option value=”av”>Cedula</option>
<option value=”bu”>T.I</option>
<option value=”bu”>Pasaporte</option>
<option value=”bu”>C.E</option>
</select>
</form></div>

<div><form> 
<label> Programa:</label><br>
<select name=”prgrama”>
<option value=”av”>MGTI</option>
<option value=”bu”>Mestria</option>
<option value=”bu”>Pasaporte</option>
<option value=”bu”>Esp.SI</option>
</select>
</form></div>

<div><form> 
<label> Genero:</label><br>
<select name=”genero”>
<option value=”av”>Masculino</option>
<option value=”bu”>Femenino</option>
<option value=”bu”>Otro</option>
</select>
</form></div>
</div>


<div class="egr"><fieldset>
<legend>¿Es egresado?</legend>
<input type="radio" name="egresado" value="sis" /> Si
<input type="radio" name="egresado" value="non" /> No
</fieldset></div>

<div class="cf"><form>
  <p>
    Actualizar certificado electoral:
    <br>
    <input type="file" name="archivosubido">
</p>
</form></div>
</div>



<div class="buttons">
        <button class="btn btn-secondary">Cancelar</button>
        <button class="btn btn-secondary">Actualizar</button>
    </div>
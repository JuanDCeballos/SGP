@model SGP.Models.Entrevistum

@{
    ViewData["Title"] = "Entrevistas";
}

<h1 class="title">@ViewData["Title"]</h1>

<form method="post">
    <div class="bltbl">
        <table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaEntrevista)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.IdUsuario)</th>
            </tr>
            <tr>
                <td>
                    <input asp-for="FechaEntrevista" type="date">
                </td>
                <td>
                    <input asp-for="Estado" type="text">
                </td>
                <td>
                    <input asp-for="IdUsuario" type="text">
                </td>
            </tr>
        </table>
    </div>

    <div class="buttons">
        <button class="btn btn-secondary">cancelar</button>
        <button class="btn btn-secondary" type="submit">Guardar</button>
    </div>
</form>